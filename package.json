{
  "name": "stacks-transactions-js",
  "version": "0.1.0",
  "description": "Javascript library for constructing transactions on the Stacks blockchain.",
  "main": "lib/index",
  "unpkg": "dist/stacks-transactions.js",
  "prettier": "@blockstack/prettier-config",
  "scripts": {
    "build": "npm run build:node",
    "build:webpack": "shx rm -rf dist/* && cross-env NODE_ENV=production webpack --mode=production",
    "build:webpack:watch": "shx rm -rf dist/* && cross-env NODE_ENV=development webpack --mode=development --watch --progress --info-verbosity verbose",
    "build:webpack:analyze": "shx rm -rf dist/* && cross-env NODE_ENV=production ANALYZE=true webpack --mode=production",
    "start": "webpack-dev-server",
    "build:node": "shx rm -rf lib && tsc",
    "build:node:watch": "shx rm -rf lib && tsc --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockstack/stacks-transactions-js.git"
  },
  "author": {
    "name": "Blockstack PBC",
    "email": "admin@blockstack.com",
    "url": "https://blockstack.com"
  },
  "contributors": [
    {
      "name": "Ken Liao"
    }
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@blockstack/prettier-config": "0.0.5",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.0",
    "@types/sha.js": "^2.4.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.1",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.16",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.6.3",
    "webpack": "^4.39.3",
    "webpack-bundle-analyzer": "^3.5.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "@types/randombytes": "^2.0.0",
    "@types/ripemd160": "^2.0.0",
    "bn.js": "^5.1.1",
    "c32check": "^1.0.1",
    "elliptic": "^6.5.2",
    "randombytes": "^2.1.0",
    "ripemd160": "^2.0.2",
    "sha.js": "^2.4.11"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "source-map-support/register"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ]
  }
}
